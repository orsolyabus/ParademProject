<div class="card card-big">
  <div class="card-body">
    <h4>
      <%= @event.title %>
    </h4>

    <p class="text-normal">
      <%= @event.date %>
    </p>

    <p class="text-normal">
      attendees: <%= coming.count %> / <%= @event.attendees %>
    </p>
    
    <p>
      <%= link_to 'add RSVP', new_event_rsvp_path(@event), class: "btn btn-small btn-teal"%>
      <ul>
        <% coming.map do |rsvp| %>
          <li><%= rsvp.contact.full_name %> </li>
        <% end %> 
      </ul>
    </p>

    <p>
      <%= link_to 'Edit event', edit_event_path(@event), class: "btn btn-small btn-orange" %>
      <br>
      <%= link_to 'Back to events', events_path %>
    </p>

  </div>
</div>