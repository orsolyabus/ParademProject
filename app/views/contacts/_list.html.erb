<div class="card">
  <table>
    <thead>
      <tr>
        <th>Full Name</th>
        <th>primary email</th>
        <th>primary phone number</th>
        <th>organisation</th>
        <th>Actions</th>

      </tr>
    </thead>

    <tbody>
      <% contacts.each do |contact| %>
      <tr>
        <td><%= contact.full_name %></td>
        <td><%= contact.email_primary %></td>
        <td><%= contact.phone_primary %></td>
        <td><%= contact.organisation %></td>
        <td><%= render "actions", contact: contact %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
